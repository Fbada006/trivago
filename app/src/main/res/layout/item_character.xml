<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="@dimen/spacing_large"
    android:paddingLeft="@dimen/spacing_large"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/textViewCharacterInitial"
        style="@style/TrivagoAvatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:backgroundTint="@sample/bankscharactersdata.json/characters/color"
        tools:text="@sample/bankscharactersdata.json/characters/initial" />

    <TextView
        android:id="@+id/textViewCharacterName"
        style="@style/TrivagoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/textViewCharacterDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCharacterInitial"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@sample/bankscharactersdata.json/characters/name" />

    <TextView
        android:id="@+id/textViewCharacterDescription"
        style="@style/TrivagoTextSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCharacterInitial"
        app:layout_constraintTop_toBottomOf="@+id/textViewCharacterName"
        tools:text="@sample/bankscharactersdata.json/characters/model" />

</androidx.constraintlayout.widget.ConstraintLayout>